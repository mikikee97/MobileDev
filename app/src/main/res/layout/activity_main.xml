<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.mykid.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="27dp"
            android:text="@string/activityName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/activityNaEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activityText"
            android:layout_alignBottom="@+id/activityText"
            android:layout_marginStart="88dp"
            android:layout_toEndOf="@+id/reporterNaText"
            android:ems="10"
            android:inputType="none"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/activityText"
            android:layout_below="@+id/activityNaEdit"
            android:layout_marginTop="12dp"
            android:text="@string/location"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/locationEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/activityNaEdit"
            android:layout_alignTop="@+id/locationText"
            android:ems="10"
            android:hint="Optional"
            android:inputType="textPostalAddress"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reporterNaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/timeBtn"
            android:layout_below="@+id/timeText"
            android:layout_marginTop="25dp"
            android:text="@string/reporterName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reporterNaEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/timeText"
            android:layout_below="@+id/timeText"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <Button
            android:id="@+id/finishBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/reporterNaEdit"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:text="@string/finish"
            android:textSize="24sp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/reporterNaText"
            android:layout_below="@+id/reporterNaEdit"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:onClick="dialogEvent"
            android:text="@string/back"
            android:textSize="24sp" />

        <Button
            android:id="@+id/dateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/locationText"
            android:layout_below="@+id/locationEdit"
            android:text="@string/date2"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dateBtn"
            android:layout_alignStart="@+id/locationEdit"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <Button
            android:id="@+id/timeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dateBtn"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="18dp"
            android:text="@string/time2"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dateText"
            android:layout_below="@+id/dateBtn"
            android:ems="10"
            android:hint="Optional"
            android:inputType="textPersonName"
            android:textSize="18sp" />

    </RelativeLayout>


</ScrollView>
